@{
    ViewData["Title"] = "Expenses";
}
@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <div class="d-flex justify-content-end">
        <a class="btn btn-success " asp-action="CreateEditExpense">Add Item</a>
    </div>

    <br />
    <br />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <hr />
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                            @expense.Id
                        </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id"> Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
